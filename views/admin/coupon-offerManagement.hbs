<main id="main" class="main">
    <div class="card">
        <div class="card-body">
            <!-- Bordered Tabs Justified -->
            <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="borderedTabJustified" role="tablist">
                <li class="nav-item flex-fill" role="presentation">
                    <button class="nav-link w-100 active" id="home-tab" data-bs-toggle="tab"
                        data-bs-target="#bordered-justified-profile" type="button" role="tab" aria-controls="home"
                        aria-selected="true">Apply coupon</button>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <button class="nav-link w-100" id="profile-tab" data-bs-toggle="tab"
                        data-bs-target="#bordered-justified-home" type="button" role="tab" aria-controls="profile"
                        aria-selected="false">Coupon offers</button>
                </li>
            </ul>
            <div class="tab-content pt-2" id="borderedTabJustifiedContent">
                <div class="tab-pane fade " id="bordered-justified-home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="card">
                        <div class="card-body">
                            <!-- Table with hoverable rows -->
                            <table class="table table-hover" id="dailyReport">
                                <thead>
                                    <tr>
                                        <th scope="col-3">Coupon Id</th>
                                        <th scope="col-3">Coupon Code</th>
                                        <th scope="col-3">Percentage</th>
                                        <th scope="col-3">Discription</th>
                                        <th scope="col-3">Max offerprice</th>
                                        <th scope="col-3">Min pur.amt</th>
                                        <th scope="col-3">Expiry date</th>
                                        <th scope="col-3">Delete</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each response}}
                                    <tr>
                                        {{!-- <th scope="row"><input type="checkbox" /></th> --}}
                                        <td class="tm-product-name">{{this._id}}</td>
                                        <td class="tm-product-name">{{this.couponCode}}</td>
                                         <td class="tm-product-name">{{this.couponPercentage}}</td>
                                       <td class="tm-product-name">{{this.discription}}</td>
                                        <td class="tm-product-name">{{this.Maxoffer}}</td>
                                      <td class="tm-product-name">{{this.Minpurchase}}</td>
                                        <td class="tm-product-name">{{this.expiryDate}}</td>
                                        <td>
                                            <a href="/admin/deleteCoupon{{this._id}}" class="btn btn-primary">Delete</a>
                                        </td>
                                    </tr>

                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade show active" id="bordered-justified-profile" role="tabpanel"
                    aria-labelledby="profile-tab">
                    <div class="card">
                        <div class="card-body mt-3">
                            {{#if branderr}}
                            <p style="color: red;">{{branderr}}</p>
                            {{/if}}

                            <form action="/admin/couponDetails" method="post">
                                <div class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Coupon Code</label>
                                    <div class="col-sm-10">
                                        <input type="tel" class="form-control w-50 " id="colFormLabelSm"
                                            name="couponCode">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Coupon Percentage</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control w-50" name="couponPercentage">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Max offerPrice</label>
                                    <div class="col-sm-10">
                                        <input type="tel" class="form-control w-50" name="Maxoffer">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Min purchaseamount</label>
                                    <div class="col-sm-10">
                                        <input type="tel" class="form-control w-50" name="Minpurchase">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Expiry Date</label>
                                    <div class="col-sm-10">
                                        <input type="date" class="form-control w-50" name="expiryDate">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="colFormLabel" class="col-sm-2 col-form-label">Discription</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control w-50" style="height:60px;"
                                            name="discription">
                                    </div>
                                    <br><br>
                                    <div class="mt-3">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div><!-- End Bordered Tabs Justified -->

        </div>
    </div>
</main>
