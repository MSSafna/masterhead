<main id="main" class="main">
<section>
    <div class="container ">
    
        <div class="col-md-6 ">
            <h2>Edit products</h2>
            <form action="/admin/editproduct" method="post" id="something" enctype="multipart/form-data">
               <input type="text" value="{{datas._id}}" name="ProId" hidden>
                <label for="">name</label>
                <input type="text" name="name" class="form-control" id="name" value="{{datas.name}}">
                   
             <label for="">brand</label>
              <select name="brand" id="changestatus" style="width:100%;height: 30px;border-radius:5px;border-color:rgb(209, 200, 200);"  value="{{datas.brand.brand}}" >
                   
                    {{!-- <option  disabled selected >{{datas.brand.brand}}</option> --}}
                     {{#each response}}
                  <option value="{{this._id}}">{{this.brand}}</option>
                   {{/each}}
                </select>


                <label for="">price</label>
                {{#if datas.brand.offerDisplay}}
                <input type="tel" name="price" class="form-control" id="price" value="{{datas.originalPrice}}">
                {{else}}
                  <input type="tel" name="price" class="form-control" id="price" value="{{datas.price}}">
               {{/if}}
                <label for="">discription</label>
                <input type="text" name="discription" class="form-control" id="discription" style="height: 150px;" value="{{datas.discription}}">

                <label for="">stock</label>
                <input type="tel" name="stock" class="form-control" id="stock" value="{{datas.stock}}">
                <label for="">image</label>
                <br>
                {{#each datas.img}}
                <div>
                <img src="/images/product/{{this}}" alt="" style="width: 60px;height: 50px;" id="imgview{{this}}">
             
                 <input type="file" class="" name="image" id="gallery-photo-add" onchange="viewImg(event,'{{this}}')" multiple >
              </div>
               {{/each}}
               
                <button type="submit" class="btn btn-success mt-4" >Submit</button>
                <input type="button" value="Back" onclick="history.go(-1)" class="btn btn-primary "
                    style="margin-top: 25px;margin-left: 10px;">
            </form>
        </div>
    </div>
    </section>
    </main>
    <script>
        function viewImg(event,id){
           
            document.getElementById('imgview'+id).src=URL.createObjectURL(event.target.files[0])
        }
    </script>