<section class="vh-100 gradient-custom mt-5" style="overflow-y:hidden;">
  <div class="container  h-90 "  >
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white " style="border-radius: 1rem; height: 500px;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
              <form action="/otpvalidation" method="post">
              <h3 class="fw-bold mb-2 text-uppercase">OTP Validation</h2>
              {{#if otperr}}
              <p style="color: red;">{{otperrmsg}}</p>
              {{/if}}

              <div class="form-outline form-white mb-4 mt-5" style="padding-top:30px;">
                <input type="tel" id="typeEmailX" class="form-control form-control-lg"   style="" name="otp"/>
                <label class="form-label" for="typeEmailX">enter your OTP code</label>
              </div>

                          
             <button class="btn btn-outline-light btn-lg px-5" type="submit">Submit</button>
               
                 <div id="display">  </div>
               <div id="resendotp" style="display:none;"><a href="/resendotp" style="text-decoration: none;color: white;">resend otp </a> </div> 

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>
              </form>
               
              
            </div>
            </div>

           

          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script>
 var timeLeft = 20;
var elem = document.getElementById('display');

var timerId = setInterval(countdown, 1000);

function countdown() {
    if (timeLeft == -1) {
        clearTimeout(timerId);
        doSomething();
    } else {
        elem.innerHTML = timeLeft + ' seconds remaining';
        timeLeft--;
    }
}

function doSomething() {
   elem.style.display="none"
   document.getElementById('resendotp').style.display="block"
   
}



</script>