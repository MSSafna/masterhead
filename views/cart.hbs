<section>

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Molla - Bootstrap eCommerce Template</title>
        <meta name="keywords" content="HTML5 Template">
        <meta name="description" content="Molla - Bootstrap eCommerce Template">
        <meta name="author" content="p-themes">
        <!-- Favicon -->
        <link rel="apple-touch-icon" sizes="180x180" href="assets/images/icons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="assets/images/icons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="assets/images/icons/favicon-16x16.png">
        <link rel="manifest" href="assets/images/icons/site.html">
        <link rel="mask-icon" href="assets/images/icons/safari-pinned-tab.svg" color="#666666">
        <link rel="shortcut icon" href="assets/images/icons/favicon.ico">
        <meta name="apple-mobile-web-app-title" content="Molla">
        <meta name="application-name" content="Molla">
        <meta name="msapplication-TileColor" content="#cc9966">
        <meta name="msapplication-config" content="assets/images/icons/browserconfig.xml">
        <meta name="theme-color" content="#ffffff">
        <!-- Plugins CSS File -->
        <link rel="stylesheet" href="assets/css/bootstrap.min.css">
        <!-- Main CSS File -->
        <link rel="stylesheet" href="assets/css/style.css">



    </head>

    <body>
        <div class="page-wrapper">


            <main class="main">


                <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
                    <div class="container">
                        <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
                    </div><!-- End .container -->
                </div><!-- End .page-header -->


                <div class="page-content">
                    <div class="cart">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-9">
                                    {{#if display}}
                                    <table class="table table-cart table-mobile">
                                        <thead>

                                            <tr>
                                                <th class="col-1">SI.no</th>
                                               
                                                <th>Product</th>
                                                <th>Price</th>
                                                <th>Quantity</th>
                                                <th>Total</th>
                                                <th>Remove</th>
                                                
                                                
                                            </tr>
                                        </thead>

                                        <tbody>
                                           

                                            {{#each cartItems}}
                                             
                                            <tr>
                                                
                                              <td>{{indexing @index}}</td>
                                                   
                                                <td class="product-col">
                                                    <div class="product">
                                                        <figure class="product-media ">
                                                            <a href="/zoomproducttesting/{{this.product._id}}">
                                                                <img src="/images/product/{{this.product.img.[0]}}"
                                                                    alt="Product image"
                                                                    style="height: 50px;width: 300px;">
                                                            </a>
                                                        </figure>

                                                        <h3 class="product-title">
                                                            <a href="/zoomproducttesting/{{this.product._id}}">{{this.product.name}}</a>
                                                        </h3><!-- End .product-title -->
                                                    </div><!-- End .product -->
                                                </td>
                                                <td class="price-col" id="price{{this.product._id}}">
                                                    {{this.product.price}}</td>
                                                <td class="quantity-col">

                                                    <div class="cart-product-quantity">


                                                        <button class="crt-items-cont mr-3"onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)"
                                                            style="border-radius:50px;border-color: #cc9966;">-</button>
                                                            
                                                        <span id="{{this.product._id}}">{{this.quantity}}</span>

                                                        <button class="crt-items-cont mr-2"onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)"
                                                            style="border-radius:50px;margin-left:5px;border-color: #cc9966;">+</button>
                                                            
                                                         
                                                        <p style="color: red;display:none ;" id="stockerr{{this.product._id}}">Out of stock</p>
                                                             
                                                    </div><!-- End .cart-product-quantity -->
                                                </td>
                                                <td class="total-col"><span id="total{{this.product._id}}">{{this.total}}</span></td>
                                                      

                                                        <td>
                                                         <button onclick="change('{{this._id}}','{{this.product._id}}')" style="border: none;background-color: white;"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                                            </svg></button>
                                                            </td>
                                                     


                                            </tr>

                                            {{/each}}


                                        </tbody>

                                    </table><!-- End .table table-wishlist -->
                                    {{else}}
                                    <div style="text-align: center;">
                                        <img src="/images/product/emptycart.gif" alt=""
                                            style="width: 300px;height: 250px;text-align: center;margin-left:20%;">
                                            <p>your cart is empty</p>
                                    </div>
                                    {{/if}}
                                    <div class="cart-bottom">




                                    </div><!-- End .cart-bottom -->
                                </div><!-- End .col-lg-9 -->

                                <aside class="col-lg-3">
                                    <div class="summary summary-cart ml-5 mt-3">
                                        <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->

                                        <table class="table table-summary">
                                            <tbody>
                                                <tr class="summary-subtotal">
                                                    <td>Subtotal:</td>
                                                    <td id="grandTotal1">{{Totals}}</td>
                                                </tr><!-- End .summary-subtotal -->
                                                

                                                

                                                

                                                <tr class="summary-shipping-row">
                                                

                                                {{!-- <tr class="summary-shipping-estimate">
                                                    <td>Estimate for Your Country<br> <a href="dashboard.html">Change
                                                            address</a></td>
                                                    <td>&nbsp;</td>
                                                </tr><!-- End .summary-shipping-estimate --> --}}

                                                <tr class="summary-total">
                                                    <td>Total:</td>
                                                    <td id="grandTotal2">{{Totals}}</td>
                                                </tr><!-- End .summary-total -->
                                            </tbody>
                                        </table><!-- End .table table-summary -->
                                        {{#if display}}
                                        <a href="/checkout"
                                            class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO
                                            CHECKOUT</a>
                                            {{else}}
                                            <a href="/checkout"
                                            class="btn btn-outline-primary-2 btn-order btn-block disabled ">PROCEED TO
                                            CHECKOUT</a>
                                            {{/if}}
                                    </div><!-- End .summary -->

                                    <a href="/products?page=1" class="btn btn-outline-dark-2 btn-block mb-3 mt-5"><span>CONTINUE
                                            SHOPPING</span><i class="icon-refresh"></i></a>
                                </aside><!-- End .col-lg-3 -->
                            </div><!-- End .row -->
                        </div><!-- End .container -->
                    </div><!-- End .cart -->
                </div><!-- End .page-content -->
            </main><!-- End .main -->  
        </div><!-- End .page-wrapper -->
        <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>
        <!-- Mobile Menu -->
        <div class="mobile-menu-overlay"></div><!-- End .mobil-menu-overlay -->
        


</section>
